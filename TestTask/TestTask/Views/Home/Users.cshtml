@{
    ViewData["Title"] = "Пользователи";
}

<div class="page-container">
    <!-- User addition form -->
    <div class="form-section">
        <h2>Добавить пользователя</h2>
        <form id="add-user-form" class="form-container">
            <input type="text" name="firstName" placeholder="Имя" required />
            <input type="text" name="lastName" placeholder="Фамилия" required />
            <input type="number" name="age" placeholder="Возраст" required />
            <input type="email" name="email" placeholder="Email" required />
            <button type="submit">Добавить</button>
        </form>
    </div>

    <!-- Table for displaying users -->
    <div class="table-section">
        <h2>Список пользователей</h2>
        <div class="table-container">
            <table id="user-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Возраст</th>
                        <th>Email</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be loaded via JavaScript -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Container for user editing (hidden by default) -->
    <div id="edit-user-container" class="edit-section" style="display:none;">
        <h2>Редактировать пользователя</h2>
        <form id="edit-user-form" class="form-container">
            <!-- Hidden field for storing the ID of the user being edited -->
            <input type="hidden" name="editId" />
            <input type="text" name="editFirstName" placeholder="Имя" required />
            <input type="text" name="editLastName" placeholder="Фамилия" required />
            <input type="number" name="editAge" placeholder="Возраст" required />
            <input type="email" name="editEmail" placeholder="Email" required />
            <button type="submit">Сохранить изменения</button>
            <button type="button" onclick="document.getElementById('edit-user-container').style.display='none'">Отмена</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/user.js"></script>
}
